<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Username"
            android:maxLines="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name_Text"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="@string/username_reminder"
        android:textSize="12sp"
        android:layout_marginLeft="105dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Telephone:"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_country"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:hint="Country"
            android:maxLines="1"
            android:inputType="number" />
        <EditText
            android:id="@+id/et_telephone"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:hint="TelephoneNumber"
            android:maxLines="1"
            android:inputType="number"/>
    </LinearLayout>

    <TextView
        android:id="@+id/phone_Text"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="@string/phone_reminder"
        android:textSize="12sp"
        android:layout_marginLeft="105dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical" />
        <EditText
            android:id="@+id/et_psd1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Input Password"
            android:maxLines="1"
            android:inputType="textPassword" />
        <CheckBox
            android:id="@+id/cb_hide"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:button="@drawable/password_box"/>
    </LinearLayout>

    <TextView
        android:id="@+id/psd_Text"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="@string/psd_reminder"
        android:textSize="12sp"
        android:layout_marginLeft="105dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Again:"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_psd2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Confirm Password"
            android:maxLines="1"
            android:inputType="textPassword"/>
    </LinearLayout>

    <TextView
        android:id="@+id/psd_match_Text"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="@string/psd_match_reminder"
        android:textSize="12sp"
        android:layout_marginLeft="105dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>